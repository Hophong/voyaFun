<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#050c5c">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Liên hệ: (028) 39632483"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="| Fax: 02839633073 "
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="0dp"
        android:background="#299b47"
        >

        <ImageView
            android:id="@+id/home"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/txtGioithieu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Giới thiệu"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fafafa"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/txtTrochoi"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Trò chơi"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#faf9f9"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/txtLehoi"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Lễ hội"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#f9f7f7"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/txtThamquan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Tham quan"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#fcfafa"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/hambuger"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/humburger"
            android:layout_gravity="center"
            />



    </LinearLayout>

    <ScrollView
        android:layout_weight="8.7"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="#a8fc8d"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/txtGiave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:text="Giá vé"
                    android:textStyle="bold"
                    android:layout_marginVertical="30dp"
                    android:layout_marginRight="3dp"
                    />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtGiave"
                    android:layout_marginLeft="5dp"
                    android:text="Trẻ em cao dưới 1m được miễn phí vào cổng"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtGiave"
                    android:layout_below="@+id/text1"
                    android:layout_marginLeft="5dp"
                    android:text="Giá vé trẻ em cao từ 1m-1.4m: 60.000 VND"/>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtGiave"
                    android:layout_below="@+id/text2"
                    android:layout_marginLeft="5dp"
                    android:text="Giá vé người lớn cao từ 1.4m: 120.000 VND"/>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/edtHoten"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điện thoại"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/edtDienthoai"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:hint="+84 "
                android:inputType="numberDecimal"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày tham quan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/edtNgaythamquan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Số lượng vé người lớn (từ 1m4 trở lên)"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtslNguoilon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:hint="0"
                android:inputType="numberDecimal"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng vé trẻ em (nhỏ hơn 1m4)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/edtslTreem"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:hint="0"
                android:inputType="numberDecimal"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng cộng"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="#f00"
                android:fontFamily="serif"
                />

            <EditText
                android:id="@+id/edtTong"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:hint="0"/>

            <Button
                android:id="@+id/btnDatve"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#d26a02"
                android:fontFamily="serif"
                android:text="Đặt vé"
                android:textColor="#fffefe"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>